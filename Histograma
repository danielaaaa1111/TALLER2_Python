positivos = 0
negativos = 0

print("Ingrese valores enteros y termine con cero:")

while True:
    try:
        numero = int(input())
        
        if numero == 0:
            break
        elif numero > 0:
            positivos += 1
        else:
            negativos += 1
    except ValueError:
        print("Recuerde ingresar n√∫meros enteros")

print("Positivos: " + "*" * positivos)
print("Negativos: " + "*" * negativos)
